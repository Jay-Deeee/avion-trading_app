<%= form_with(model: @user, url: update_password_admin_user_path(@user), method: :patch, local: true) do |form| %>
  <div class="form-field">
    <%= form.label :password %>
    <%= form.password_field :password %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
    <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br />
  <div>
    <%= form.submit "Change Password", class: "btn btn-success" %>
  </div>
<% end %>