<section>
  <div>
    <h4><%= @user.full_name %></h4>
    <p></p>
  </div>
  <p>E-mail: <%= @user.email %></p>
  <p>Balance: <%= @user.balance %></p>
  <p>Member since: <%= @user.created_at.strftime("%b %d, %Y at %-I:%M %p") %></p>
  <p>
    <% color = @user.is_admin == true ? "green" : "red" %>
    Admin Status: <span style="color: <%= color %>; font-weight: 900;"><%= "#{@user.is_admin}".upcase %></span>
  </p>
</section>